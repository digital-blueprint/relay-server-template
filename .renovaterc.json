{
  "extends": [
    "config:base",
    "group:allNonMajor",
    "schedule:monthly",
    ":automergePatch"
  ],
  "ignorePresets": [":prHourlyLimit2"],
  "rangeStrategy": "update-lockfile",
  "lockFileMaintenance": {
    "enabled": true
  },
  "constraintsFiltering": "strict",
  "packageRules": [
    {
      "matchPackagePrefixes": ["symfony/"],
      "allowedVersions": "<7"
    },
    {
      "matchPackageNames": ["api-platform/core"],
      "allowedVersions": "<4"
    },
    {
      "matchPackageNames": ["phpunit/phpunit"],
      "allowedVersions": "<11"
    }
  ],
  "docker": {
    "enabled": false
  }
}
