{
  "extends": [
    "config:base",
    "group:allNonMajor",
    "schedule:weekends",
    ":automergePatch"
  ],
  "ignorePresets": [":prHourlyLimit2"],
  "ignorePlugins": false,
  "rangeStrategy": "update-lockfile",
  "lockFileMaintenance": {
    "enabled": true
  },
  "constraintsFiltering": "strict",
  "packageRules": [
    {
      "matchPackagePrefixes": ["symfony/"],
      "allowedVersions": "<6"
    },
    {
      "matchPackageNames": ["phpunit/phpunit"],
      "allowedVersions": "<10"
    }
  ],
  "docker": {
    "enabled": false
  }
}
