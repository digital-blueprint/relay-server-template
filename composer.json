{
    "name": "dbp/relay-server-template",
    "description": "An example Symfony application using the Relay API gateway",
    "type": "project",
    "license": "AGPL-3.0-or-later",
    "require": {
        "php": ">=8.2",
        "ext-intl": "*",
        "api-platform/symfony": "^4.1",
        "dbp/relay-core-bundle": "^0.1.215",
        "dbp/relay-core-connector-oidc-bundle": "^0.1.43",
        "dbp/relay-maker-bundle": "^0.1.10",
        "symfony/apache-pack": "^1.0.1",
        "symfony/console": "^6.4",
        "symfony/dotenv": "^6.4",
        "symfony/flex": "^2.0.0",
        "symfony/framework-bundle": "^6.4",
        "symfony/http-kernel": "^6.4",
        "symfony/monolog-bundle": "^3.8",
        "symfony/yaml": "^6.4"
    },
    "config": {
        "preferred-install": {
            "dbp/*": "source",
            "*": "dist"
        },
        "sort-packages": true,
        "platform": {
            "php": "8.2"
        },
        "allow-plugins": {
            "composer/package-versions-deprecated": true,
            "symfony/flex": true,
            "symfony/runtime": true
        }
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "App\\Tests\\": "tests/"
        }
    },
    "replace": {
        "symfony/polyfill-ctype": "*",
        "symfony/polyfill-iconv": "*",
        "symfony/polyfill-php71": "*",
        "symfony/polyfill-php70": "*",
        "symfony/polyfill-php56": "*"
    },
    "scripts": {
        "auto-scripts": {
            "vendor/dbp/relay-core-bundle/bin/move-core-bundle.php": "php-script",
            "vendor/dbp/relay-core-bundle/bin/disable-database-url.php": "php-script",
            "cache:clear": "symfony-cmd",
            "assets:install %PUBLIC_DIR%": "symfony-cmd"
        },
        "post-install-cmd": [
            "@auto-scripts"
        ],
        "post-update-cmd": [
            "@auto-scripts"
        ],
        "test": [
            "@php vendor/bin/phpunit"
        ],
        "coverage": [
            "@php -dxdebug.mode=coverage vendor/bin/phpunit --coverage-html _coverage"
        ],
        "phpstan": [
            "@php vendor/bin/phpstan analyze --ansi"
        ],
        "lint": [
            "@composer run cs",
            "@composer run phpstan"
        ],
        "cs-fix": [
            "@php vendor/bin/php-cs-fixer --ansi fix"
        ],
        "cs": [
            "@php vendor/bin/php-cs-fixer --ansi fix --dry-run --diff"
        ]
    },
    "conflict": {
        "symfony/symfony": "*"
    },
    "extra": {
        "symfony": {
            "allow-contrib": false,
            "require": "^6.4",
            "endpoint": [
                "flex://defaults",
                "https://api.github.com/repos/digital-blueprint/symfony-recipes/contents/index.json?ref=flex/main"
            ]
        }
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.51",
        "phpstan/phpstan": "^2.0.0",
        "phpstan/phpstan-phpunit": "^2.0.0",
        "phpstan/phpstan-symfony": "^2.0.0",
        "phpunit/phpunit": "^11.5",
        "symfony/browser-kit": "^6.4",
        "symfony/debug-bundle": "^6.4",
        "symfony/http-client": "^6.4",
        "symfony/phpunit-bridge": "^7.1.3",
        "symfony/runtime": "^6.4",
        "symfony/stopwatch": "^6.4",
        "symfony/var-dumper": "^6.4",
        "symfony/web-profiler-bundle": "^6.4"
    }
}
